= form_for @roast_level do |f|
  - if @roast_level.errors.any?
    #error_explanation
      %h2= "#{pluralize(@roast_level.errors.count, "error")} prohibited this roast_level from being saved:"
      %ul
        - @roast_level.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
